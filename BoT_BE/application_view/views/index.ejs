  <script>
    $(function () {
      // Query IoTs
      $('#btnQueryAllIoTs').click(async () => {
        const result = await fetch('/api/queryAllIoTs');
        const json = await result.json();
        if(json.length === 0) {
          $('#queryAllIoTs #result').html(`<font color="red">Unable to query copyright.</font>`);
          return;
        }
        let table = '<table class="table-bot"><thead><tr><th>IoT 장비 고유키</th><th>장비 종류</th><th>유저 ID</th><th>오류사항</th></tr></thead><tbody>';
        for(let i = 0; i < json.length; i++) {
          table += '<tr>';
          table += `<td>${json[i].Key}</td>`;
          table += `<td>${json[i].Record.device}</td>`;
          table += `<td>${json[i].Record.userid}</td>`;
          table += `<td>${json[i].Record.feedback}</td>`;
          table += '</tr>';
        }
        table += '</tbody></table>'
        $('#queryAllIoTs #result').html(table);
      });
      
      // Highlight row
      $('.table-bot tbody tr').hover(() => {
        $('.table-bot tbody tr').removeClass('active-row');
        $(this).addClass('active-row');
      });

      // Query Users
      $('#btnQueryAllUsers').click(async () => {
        const result = await fetch('/api/queryAllUsers');
        const json = await result.json();
        if(json.length === 0) {
          $('#queryAllUsers #result').html(`<font color="red">Unable to query copyright.</font>`);
          return;
        }
        let table = '<table class="table-bot"><thead><tr><th>유저 ID</th><th>유저 이름</th><th>소속</th><th>유저 mail</th><th>전화번호</th></tr></thead><tbody>';
        for(let i = 0; i < json.length; i++) {
          table += '<tr>';
          table += `<td>${json[i].Record.id}</td>`;
          table += `<td>${json[i].Record.name}</td>`;
          table += `<td>${json[i].Record.team}</td>`;
          table += `<td>${json[i].Record.mail}</td>`;
          table += `<td>${json[i].Record.phone}</td>`;
          table += '</tr>';
        }
        table += '</tbody></table>'
        $('#queryAllUsers #result').html(table);
      });

      // getHistory
      $('#btnGetHistory').click(() => {
        $('#getHistory #txtIoTKey').val('');
        $('#getHistory #result').html('');
      });

      // Get History of IoT
      $('#getHistory #btnQuery').click(async () => {
        const iotNo = $('#getHistory #txtIoTKey').val();
        const result = await fetch(`/api/getHistory/${iotNo}`);
        const json = await result.json();
        let table = '<table class="table-bot"><thead><tr><th>트랜잭션 ID</th><th>장비</th><th>타임스탬프</th><th>삭제여부</th></tr></thead><tbody>';
        for(let i = 0; i < json.length; i++) {
          table += '<tr>';
          table += `<td>${json[i].TxId}</td>`;
          table += `<td>${json[i].Value.device}</td>`;
          table += `<td>${json[i].Timestamp}</td>`;
          table += `<td>${json[i].IsDelete}</td>`;
          table += '</tr>';
        }
        table += '</tbody></table>'
        $('#getHistory #result').html(table);
      });
      
    });
  </script>
