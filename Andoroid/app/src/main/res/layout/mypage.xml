<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="My Page"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mypage_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="ID"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tv_mypage_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Pw"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_mypage_id"
        app:layout_constraintStart_toStartOf="@+id/tv_mypage_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_id" />

    <TextView
        android:id="@+id/tv_mypage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Name"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_mypage_pw"
        app:layout_constraintStart_toStartOf="@+id/tv_mypage_pw"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_pw" />

    <TextView
        android:id="@+id/tv_mypage_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Email"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_mypage_name"
        app:layout_constraintStart_toStartOf="@+id/tv_mypage_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_name" />

    <TextView
        android:id="@+id/tv_mypage_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Phone"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_mypage_email"
        app:layout_constraintStart_toStartOf="@+id/tv_mypage_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_email" />

</androidx.constraintlayout.widget.ConstraintLayout>